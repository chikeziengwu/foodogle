<p id="notice"><%= notice %></p>

<p>
  <h2><%= @cuisine.title %></h2>
</p>

<p>
  <b>Description:</b>
  <%= @cuisine.description %>
</p>

<% if @recipes.any? %>
    <p>
       <b><h4> Related recipes: </h4></b>
       <% @recipes.each do |recipe|%>

            <ul>
              <td class "recipeCuisine" width="10%"><h4><%= link_to recipe.name, recipe %></h4></td>
            </ul>

       <% end %>
    </p>
<% end%>



<%= link_to 'Edit', edit_cuisine_path(@cuisine) %> |
<%= link_to 'Back', cuisines_path %>
