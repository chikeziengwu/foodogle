<% if @recipes.length == 0 %>
    <div id="error_explanation">
         <h3>Could not find any recipes matching your search ! </h2>
    </div>
<%else%>
    <h2> Recipes found with
        <% @i = 0 %>
        <%@search_strings.each do|ing| %>
            <%= ing %>
            <% @i = @i + 1 %>
            <% if (@i < (@search_strings.length) - 1)%>
                ,
            <% elsif (@i == (@search_strings.length) - 1) %>
                and
            <% else %>
                :
            <%end%>
        <%end%>
    </h2>

    <% @recipes.each do |recipe| %>
       <ul>
        <table>
          <tr>
            <td class "recipeName" width = "5%"><%= link_to recipe.name, :controller => 'ingredients', :action => 'show', :id => recipe.id  %>  </td>
            <td class="recipeUrl" width = "10%"><%= image_tag(recipe.image_url, :weight => "100", :height => "100") %></td>
          </tr>
        </table>
       </ul>
    <% end %>
<% end %>

<%= link_to 'Back', ingredients_path %>



