<!DOCTYPE html>

<html>
    <head>
        <title>Foodogle</title>
        <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
        <%= stylesheet_link_tag 'blueprint/print', :media => 'print' %>
        <%= stylesheet_link_tag 'custom', :media => 'screen' %>
        <%= javascript_include_tag :defaults, :cache => true %>
        <%= csrf_meta_tag %>
    </head>

    <body id="container">


        <div id="header">

            <div id="logo">
               <%= image_tag("food.jpg") %>
               <%= "Foodogle" %>
            </div>

            <div id="wrapper">

              <div id="menu">
                <nav class="options">
                  <ul>
                    <li><%= link_to "Home", '/pages/home' %></li>
                    <li><%= link_to "Recipes", '/recipes' %></li>
                    <li><%= link_to "Cuisines", '/cuisines' %></li>
                    <li><%= link_to "Ingredients", '/ingredients' %></li>
                  </ul>
                </nav>
              </div>

              <div id="search" >
                  <%= form_tag recipes_path, :method => 'get', :id => 'home' do %>
                      <p>
                        <%= text_field_tag :search, params[:search] %>
                        <%= submit_tag "Search Recipe", :name => nil %>
                      </p>
                  <% end %>
              </div>

            </div>
        </div>


        <div id="columns">

          <div id="sidebar">
            <li>
				<h4> Most Popular</h4>
				<ul>
				    <li>Recipe1</li>
                    <li>Recipe2</li>
                    <li>Recipe3</li>
                    <li>Recipe4</li>

				</ul>
			</li>
          </div>

          <div id="main">
                <%= yield %>
          </div>

        </div>

    </body>

    <!-- Place this tag where you want the +1 button to render -->
    <!--g:plusone annotation="inline"></g:plusone-->

    <!-- Place this render call where appropriate -->
    <script type="text/javascript">
        (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script>


</html>